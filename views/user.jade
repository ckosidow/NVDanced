html
    head
        title User
        include ./includes/head.jade
    body
        include ./includes/nav.jade

        main
            div.content
                div.pure-g
                    div.pure-u-1.pure-u-sm-3-5.pure-u-md-1-2.pure-u-lg-1-3
                        img(src="#{user.images[0].url}")
                    div.pure-u-1.pure-u-sm-2-5.pure-u-md-1-2.pure-u-lg-2-3
                        h3 !{user.display_name}

                div.pure-g
                    each playlist in playlists
                        div.pure-u-1-2.pure-u-sm-1-3.pure-u-md-1-4.pure-u-lg-1-5
                            h4(style="text-align: center") !{playlist.name}
                            p(style="text-align: center")
                                a(href="/other?user_id=#{playlist.owner.id}") !{playlist.owner.display_name}
                            div(style="width:70%;margin:auto")
                                a(href="/playlist?user_id=#{playlist.owner.id}&playlist_id=#{playlist.id}")
                                    - if (playlist.images[0]) {
                                        img(src="#{playlist.images[0].url}", width="100%")
                                    - } else {
                                        img(src="#")
                                    - }