html
    head
        title User
        include ./includes/head.jade
    body
        include ./includes/nav.jade

        main
            div.content
                div.pure-g
                    div.pure-u-1-4
                        h3 !{user.display_name}
                        img(src="#{user.images[0].url}")

                div.pure-g
                    each playlist in playlists
                        div.pure-u-1-2.pure-u-sm-1-3.pure-u-md-1-4.pure-u-lg-1-5
                            h4(style="text-align: center") !{playlist.name}
                            p(style="text-align: center")
                                a(href="/other?user_id=#{playlist.owner.id}") !{playlist.owner.display_name}
                            a(href="/playlist?user_id=#{playlist.owner.id}&playlist_id=#{playlist.id}")
                                - if (playlist.images[0]) {
                                    img(src="#{playlist.images[0].url}", width="80%", style="margin: auto; display: block")
                                - } else {
                                    img(src="#")
                                - }